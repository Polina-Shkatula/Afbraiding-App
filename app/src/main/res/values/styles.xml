<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/ground</item>
        <item name="colorControlActivated">@android:color/holo_purple</item>
    </style>

    <style name="MsgErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorAppRed</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:lineSpacingExtra">@dimen/spacing_5</item>
    </style>

    <style name="Theme.MyApp" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorError">@color/colorRed</item>
    </style>

    <style name="PinWidget.PinView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>