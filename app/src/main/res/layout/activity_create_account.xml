<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".ui.CreateAccountActivity">

    <include layout="@layout/layout_toolbar"/>

    <TextView
        android:id="@+id/tvVerification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_account_title"
        android:textStyle="bold"
        android:textSize="@dimen/text_34"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="@dimen/spacing_2"
        android:layout_marginStart="@dimen/spacing_22"
        android:layout_marginEnd="@dimen/spacing_22" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="true"
        android:layout_marginTop="@dimen/spacing_32"
        android:layout_marginStart="@dimen/spacing_16"
        android:layout_marginEnd="@dimen/spacing_16"
        app:errorTextAppearance="@style/MsgErrorText"
        app:boxStrokeColor="@color/colorPrimary"
        app:errorEnabled="false">
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|textCapWords"
            android:hint="@string/my_name"
            android:imeOptions="actionNext"
            android:layout_marginBottom="@dimen/spacing_10"
            android:textSize="@dimen/text_17"
            android:textColorHint="@color/colorBlackLight80"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="true"
        android:layout_marginStart="@dimen/spacing_16"
        android:layout_marginEnd="@dimen/spacing_16"
        app:errorTextAppearance="@style/MsgErrorText"
        app:errorEnabled="false">
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/email"
            android:imeOptions="actionDone"
            android:layout_marginBottom="@dimen/spacing_10"
            android:textSize="@dimen/text_17"
            android:textColor="@color/colorBlackLight80"/>
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_20"
        android:enabled="false"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/spacing_34"
        android:layout_marginEnd="@dimen/spacing_34"
        android:textAllCaps="false"
        android:textSize="@dimen/text_17"
        android:background="@drawable/selector_btn_60"
        android:text="@string/lets_go"/>

</LinearLayout>