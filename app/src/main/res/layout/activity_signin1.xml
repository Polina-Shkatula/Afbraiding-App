<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55.5dp"
        android:clickable="true"
        android:drawableStart="@drawable/ic_arrow"
        android:layout_marginLeft="8.5dp"
        android:padding="10dp"
        android:text="Back"
        android:textSize="15sp"
        android:textColor="#0080EF"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/ic_arrow" />

    <TextView
        android:layout_width="102dp"
        android:layout_height="42dp"
        android:layout_marginTop="22dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="253dp"
        android:text="Sign In"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="253dp"/>
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="56dp"
        android:text="Please enter your mobile number. We will send you a verification message to confirm your account"
        android:textSize="20dp"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="330dp"
        android:layout_marginBottom="530dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/netherlands"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_netherlands" />


    </LinearLayout>


</LinearLayout>